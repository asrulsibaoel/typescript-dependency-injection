{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": [
      "reflect-metadata"
    ],
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "rootDir": "."
  },
  "filesGlob": [
    "/app",
    "/config",
    "/test",
    "/utils",
    "server.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
